{
    "manifest_version": 2,
    "name": "UFB",
    "version": "1.0",
    "description": "your own Facebook",
    "content_scripts" : [
        {
        "matches" :[
            "https://www.facebook.com/*"
        ],
        "js" :["content.js"]
        }
    ],
    "background" :{
        "scripts" :["background.js"] 
    },
    "permissions" :["tabs"],
    "browser_action" :{
        "default_icon": "media-blot-facebook-set-social-icon.png",
        "default_popup" :"popup.html",
        "default_title" :"your own FB "
    }
}